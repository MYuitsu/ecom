# Flask app
PORT=1236
DEBUG=1

# MySQL Primary Node (Máy 1)
MYSQL_HOST=10.8.0.10
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=Vnpt@2025
MYSQL_DB=shop

# MySQL Secondary Nodes (để test distributed queries)
MYSQL_SECONDARY_1_HOST=10.8.0.14
MYSQL_SECONDARY_1_PORT=3306
MYSQL_SECONDARY_2_HOST=10.8.0.15
MYSQL_SECONDARY_2_PORT=3306

# MySQL Replication Config
MYSQL_REPLICATION_USER=repl_user
MYSQL_REPLICATION_PASSWORD=Vnpt@2025

# MongoDB Replica Set (các node ở máy 2 và máy 3)
MONGODB_URI=mongodb://10.8.0.10:27017,10.8.0.14:27017,10.8.0.15:27017/?replicaSet=rs0
MONGODB_DB=shop
MONGODB_CONNECT_TIMEOUT=5000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# MongoDB Individual Nodes (để test riêng từng node)
MONGODB_NODE1=10.8.0.10:27017
MONGODB_NODE2=10.8.0.14:27017
MONGODB_NODE3=10.8.0.15:27017

# Distributed Transaction Settings
ENABLE_DISTRIBUTED_TRANSACTIONS=1
TRANSACTION_TIMEOUT=30
MAX_RETRY_ATTEMPTS=3

# Performance Testing
ENABLE_QUERY_LOGGING=1
ENABLE_PERFORMANCE_METRICS=1
SLOW_QUERY_THRESHOLD_MS=1000

# Fault Tolerance Settings
ENABLE_AUTO_FAILOVER=1
HEALTH_CHECK_INTERVAL=10
CONNECTION_POOL_SIZE=10
CONNECTION_POOL_TIMEOUT=5

# Sync & Replication Testing
SYNC_INTERVAL_SECONDS=5
ENABLE_BIDIRECTIONAL_SYNC=1
CONFLICT_RESOLUTION_STRATEGY=TIMESTAMP

# Load Testing
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30

# Node Information (để tracking và monitoring)
NODE_ID=1
NODE_NAME=primary-node
NODE_LOCATION=10.8.0.10

# Redis (optional - for distributed locks/cache)
REDIS_ENABLED=0
REDIS_HOST=10.8.0.10
REDIS_PORT=6379
REDIS_PASSWORD=

# Testing Modes
TEST_MODE=production
SIMULATE_NETWORK_LATENCY=0
NETWORK_LATENCY_MS=100
SIMULATE_NODE_FAILURE=0

# Logging & Monitoring
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log
ENABLE_DISTRIBUTED_TRACING=1
TRACE_SAMPLE_RATE=0.1